<!-- Post -->
{{#if msgSuccess}}
	<section>
		<h1>{{msgSuccess.msg}}</h1>
	</section>
{{else}}
	<section>
		<h1>Create a Story</h1>
		<form>
			<div class="field">
				<label for="id">ID*</label>
				<input type="number" name="id" id="us-id" placeholder="Enter the user ID" required></input>
			</div>
			<div class="field">
				<label for="title">Title*</label>
				<input type="text" name="title" id="st-title" placeholder="Title" required/>
			</div>
			<div class="field">
				<label for="genre">Genre*</label>
				<div class="select-wrapper">
					<select id="genre-selector" name="genre">
						<option value="-1" selected="selected" disabled>Select a Genre</option>
					</select>
				</div>
			</div>
			<div class="field">
				<label for="body">Body*</label>
				<textarea name="body" id="st-body" rows="3" placeholder="Body" required></textarea>
			</div>
			<ul class="actions">
				<li><a class="button edit-submit">Publish Story</a></li>
			</ul>
			<div class="field">
				<p>* required fields</p>
			</div>
		</form>
	</section>
{{/if}}